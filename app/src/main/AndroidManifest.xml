<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.contentws.cws" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationState"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher" >
        <activity
            android:name=".Activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name=".Activity.WebBrowserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name=".Activity.ContentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" >
        </activity>
        <activity
            android:name=".Activity.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".Activity.PseudoActivity"
            android:label="@string/title_activity_pseudo"
            android:theme="@style/MyMaterialTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Activity.SignupActivity"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".Activity.PaperActivity"
            android:label="@string/title_activity_paper"
            android:theme="@style/MyMaterialTheme">
        </activity>
    </application>

</manifest>
